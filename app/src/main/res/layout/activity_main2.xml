<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/cim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="Adatok bekerésése"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        />


    <EditText
        android:id="@+id/nev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cim"
        android:layout_marginTop="16dp"
        android:hint="Adja meg a nevét"
        android:inputType="text"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/szul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nev"
        android:hint="Adja meg a születési dátumát"
        android:layout_marginTop="16dp"
        android:inputType="date"
        />



    <EditText
        android:id="@+id/szig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/szul"
        android:hint="Adja meg a szig. számát"
        android:layout_marginTop="16dp"
        android:inputType="text"
        />


    <Button
        android:id="@+id/tovabbitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/szig"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:text="Továbbítás" />




</RelativeLayout>